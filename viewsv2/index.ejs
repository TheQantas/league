            <% if (game.away.abbr == g.away && game.home.abbr == g.home) { %>
              <div id="currentGame">
            <% } else { %>
              <div>
            <% } %>
          <% } else { %>
            <div>
          <% } %>
            <div class="gamesHead"><% if (gameActive) { %>
              <% if (g.away == game.away.abbr && g.home == game.home.abbr) { %>
                <span id="gamesTime"><%= gameTime.q %> &middot; <%= gameTime.s %></span>
                <button class="live" onclick="showUpdates()">LIVE</button>
              <% } else { %>
                <%= g.time %>
              <% } %>
              <% } else if (g.status == 'upcoming') { %>
                <%= g.time %>
              <% } else { %>
                <%= g.status %>
              <% } %>
            </div>
            <div class="gamesRow">
              <img src="logos/<%= g.awayClean %>_g.png">
              <div><%= g.away %></div>
              <% if (gameActive && g.away == game.away.abbr && g.home == game.home.abbr) { %>
                <div class="s" id="gamesAwayScore"><%= game.awayScore %></div>
              <% } else { %>
                <div class="s"<% if (g.awayLead) { %> style="font-weight:bold;"<%}%>><%= g.awayRender %></div>
              <% } %>
            </div>
            <div class="gamesRow">
