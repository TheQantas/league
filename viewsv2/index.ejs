  <% function shorten(str) {
    switch(str) {
      case 'Hummingbirds':
        return 'H\'Birds';
      case 'Chameleons':
        return '\'Leons';
      case 'Rottweilers':
        return 'Rotts';
    }
    return str;
  } %>
  <% var adj = 0; %>
  <% function getTheme(num) {
    switch(num) {
      case 0:
        return {c:'teal',s:'preseason'};
      case 21:
        return {c:'green',s:'wildcard'};
      case 22:
        return {c:'blue',s:'divisional'};
      case 23:
        return {c:'purple',s:'conference'};
      case 24:
        return {c:'gold',s:'trophy'};
    }
  }%>
