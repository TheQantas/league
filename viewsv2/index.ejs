            </div>
            <div class="deskBlock left <%= t.awayClean %>"></div>
            <div class="deskTri">
              <div class="<%= t.awayClean %>">
                <div class="botRight <%= t.homeClean %>"></div>
              </div>
            </div>
            <div class="deskBlock right <%= t.homeClean %>"></div>
            <div class="deskSide <%= t.homeClean %>" style="right:0px;">
              <img src="logos/<%= t.homeClean %>_t.png">
            </div>
            <div class="deskMain">
